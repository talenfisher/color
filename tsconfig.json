{
    "compilerOptions": {
      "target": "es2015",                          
      "module": "commonjs",                     
      "lib": ["es7"],
      "allowJs": true,                        
      "outDir": "./dist",                        
      "rootDir": "./src",                       
      "removeComments": true,                    
      "strict": true,                           
      "moduleResolution": "node",            
      "baseUrl": "./src",                       
      "rootDirs": ["./src"],                        
      "esModuleInterop": true,     
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "strictPropertyInitialization": false                 
    },
    "include": [
        "src/**/*",
    ]
  }